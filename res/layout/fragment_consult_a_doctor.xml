<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:background="@drawable/bg1"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content" android:textSize="20dp"
        android:layout_height="wrap_content" android:textColor="#adbece"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" android:textStyle="bold"
        android:layout_marginTop="23dp"
        android:text="Click below to scan the QR code" />

    <ImageView
        android:id="@+id/qrCodeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/placeholder_qr" />
 
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" android:textSize="13dp"
        android:layout_marginBottom="14dp"
        android:gravity="center_horizontal"
        android:text="You'll be directly connected to your doctor."
        android:textAlignment="gravity"
        android:textColor="#adbece" />
</RelativeLayout>