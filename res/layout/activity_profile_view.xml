<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:background="@drawable/bg1"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/profilePicView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp" android:layout_marginTop="15dp"
        android:src="@drawable/pp" />

    

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
         android:layout_alignLeft="@+id/profilePicView"
        android:layout_below="@+id/profilePicView"
        android:layout_marginTop="25dp" android:layout_marginRight="15dp">
        

        <LinearLayout
            android:layout_width="match_parent" 
            android:layout_height="match_parent"
            android:orientation="vertical" >
            <LinearLayout
        android:layout_width="match_parent" android:layout_margin="5dp"
        android:layout_height="wrap_content" android:background="@drawable/shape3" 
       
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email id:"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/emailIdView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jainaayush05@gmail.com"
            android:textSize="18dp" android:textStyle="bold"
            />

    </LinearLayout>
    
              <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@drawable/shape3" 
       android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone no. :" android:textSize="15dp" />

        <TextView
            android:id="@+id/phoneNoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91-9458682229"
            android:textSize="18dp" android:textStyle="bold" />

    </LinearLayout>
    
                <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@drawable/shape3" 
       android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="blood group:" android:textSize="15dp" />

        <TextView
            android:id="@+id/bloodGroupView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B+"
            android:textSize="18dp" android:textStyle="bold" />

    </LinearLayout>
    
                  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:background="@drawable/shape3" 
       android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="address:" android:textSize="15dp"/>

        <TextView
            android:id="@+id/address1View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B-22"
            android:textSize="18dp" android:textStyle="bold" />
        <TextView
            android:id="@+id/address2View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Door Sanchar Colony"
            android:textSize="18dp" android:textStyle="bold" />
        <TextView
            android:id="@+id/address3View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indore-M.P."
            android:textSize="18dp" android:textStyle="bold" />

    </LinearLayout>

                  <LinearLayout
                      android:layout_width="match_parent" android:orientation="horizontal"
                      android:layout_height="wrap_content" >
        <LinearLayout
        android:layout_width="match_parent" android:layout_weight="1"
        android:layout_height="wrap_content" android:background="@drawable/shape3" 
       android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="age:" android:textSize="15dp" />

        <TextView
            android:id="@+id/ageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22"
            android:textSize="18dp" android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent" android:layout_weight="1"
        android:layout_height="wrap_content" android:background="@drawable/shape3" 
       android:layout_margin="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gender:" android:textSize="15dp" />

        <TextView
            android:id="@+id/genderView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
